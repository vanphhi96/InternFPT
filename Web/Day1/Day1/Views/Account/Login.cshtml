
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<div class="row">
    
    <div class="formLogin">
        <form action="/Account/Login" method="post">
            <div class="form-group">
                <label>Username</label>
                <input type="text" name="UserName" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" name="Password"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" />
            </div>
        </form>
    </div>
</div>

